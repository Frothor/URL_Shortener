@model URLShortener.Models.Link

<div class="container">
    @ViewBag.Message
    <div class="row">
        <div class="col-8">
            @using (Html.BeginForm("Edit", "Home", FormMethod.Post))
            {
                @Html.HiddenFor(x => x.Id)
                <div class="form-group row">
                    @Html.LabelFor(x => x.Long, "Original URL", new { @class = "col-form-label col-4" })
                    <div class="col-8">
                        @Html.TextBoxFor(x => x.Long, new { @class = "form-control", disabled = "" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(x => x.Short, new { @class = "col-form-label col-4" })
                    <div class="col-8">
                        @Html.TextBoxFor(x => x.Short, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(x => x.NumberOfClicks, "Number Of Enters", new { @class = "col-form-label col-4" })
                    <div class="col-8">
                        @Html.TextBoxFor(x => x.NumberOfClicks, new { @class = "form-control", disabled = "" })
                    </div>
                </div>

                <button class="btn btn-success"><i class="fa fa-check"></i> Submit Changes</button>
            }
        </div>
    </div>
</div>